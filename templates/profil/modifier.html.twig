{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
        
        {# En-tête de la page #}
        <div class="text-center mb-10">
            <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">
                Mon profil
            </h1>
            <p class="mt-2 text-sm text-gray-600">
                Gérez vos informations personnelles et vos identifiants.
            </p>
        </div>

        {# La "Carte" du formulaire #}
        <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-slate-200">
            {{ form_start(form, {'attr': {'class': 'p-8'}}) }}
                
                <div class="space-y-8">
                    
                    {# Section Infos Générales #}
                    <div>
                        <h2 class="text-lg font-bold text-indigo-600 uppercase tracking-wider mb-4 border-b border-indigo-100 pb-2">
                            Informations personnelles
                        </h2>
                        <div class="space-y-5">
                            {{ form_row(form.pseudo) }}
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                {{ form_row(form.prenom) }}
                                {{ form_row(form.nom) }}
                            </div>
                            {{ form_row(form.telephone) }}
                            {{ form_row(form.mail) }}
                        </div>
                    </div>

                    {# Section Campus #}
                    <div>
                        <h2 class="text-lg font-bold text-indigo-600 uppercase tracking-wider mb-4 border-b border-indigo-100 pb-2">
                            Rattachement
                        </h2>
                        {{ form_row(form.campus) }}
                    </div>

                    {# Section Sécurité #}
                    <div class="bg-slate-50 -mx-8 px-8 py-6 border-t border-b border-slate-100">
                        <h2 class="text-lg font-bold text-gray-800 uppercase tracking-wider mb-4">
                            Sécurité
                        </h2>
                        <p class="text-xs text-gray-500 mb-4 italic">
                            Laissez vide pour conserver votre mot de passe actuel.
                        </p>
                        {{ form_row(form.password) }}
                    </div>

                </div>

                {# Actions #}
                <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-4">
                    <button type="submit" class="w-full sm:w-auto px-8 py-3 bg-indigo-600 text-white font-bold rounded-xl shadow-lg shadow-indigo-200 hover:bg-indigo-700 hover:shadow-none transition-all focus:ring-4 focus:ring-indigo-300">
                        Enregistrer le profil
                    </button>
                </div>

            {{ form_end(form) }}
        </div>

    </div>
</div>
{% endblock %}