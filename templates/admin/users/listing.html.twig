{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

        {# --- En-tête : Info utilisateur et date --- #}
        <div class="flex flex-col md:flex-row justify-end items-center mb-6 text-sm text-gray-600 space-y-2 md:space-y-0 md:space-x-4">
            <div>
                <span class="font-semibold">Date du jour :</span> {{ "now"|date("d/m/Y") }}
            </div>
            <div>
                <span class="font-semibold">Utilisateur :</span> {{ app.user.pseudo }}
            </div>
        </div>

        <h2 class="text-2xl font-bold text-gray-800 mb-6">Gestion des utilisateurs</h2>

        {# --- Formulaire de Recherche --- #}
        <div class="bg-gray-50 shadow-md rounded-lg p-6 mb-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">

                {# Campus + Nom #}
                <div class="lg:col-span-6 space-y-4">
                    <div class="block">
                        {{ form_label(form.campus, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.campus, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                    </div>

                    <div class="block">
                        {{ form_label(form.nom, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                    </div>
                </div>

                {# Checkbox #}
                <div class="lg:col-span-3 flex flex-col justify-center space-y-3 lg:pl-8">
                    <div class="flex items-center">
                        {{ form_widget(form.actifSeulement, {'attr': {'class': 'h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500'}}) }}
                        {{ form_label(form.actifSeulement, null, {'label_attr': {'class': 'ml-2 block text-sm text-gray-900'}}) }}
                    </div>
                </div>

                {# Submit #}
                <div class="lg:col-span-3 flex items-center justify-center lg:justify-end">
                    {{ form_widget(form.submit, {'attr': {'class': 'w-full lg:w-auto px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg shadow transition duration-150'}}) }}
                </div>
            </div>

            {{ form_end(form) }}
        </div>

        {# --- Tableau utilisateurs --- #}
        <div class="bg-white shadow-md rounded-lg overflow-hidden border border-gray-200">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-800 text-white">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Nom</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Prénom</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider hidden sm:table-cell">Mail</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider hidden md:table-cell">Campus</th>
                        <th class="px-4 py-3 text-center text-xs font-medium uppercase tracking-wider">Actif</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Actions</th>
                    </tr>
                    </thead>

                    <tbody class="bg-white divide-y divide-gray-200">
                    {% for p in participants %}
                        <tr class="hover:bg-gray-50 transition-colors duration-150">
                            <td class="px-4 py-4 whitespace-nowrap text-sm font-bold text-gray-900">
                                {{ p.nom }}
                            </td>
                            <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-700">
                                {{ p.prenom }}
                            </td>
                            <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500 hidden sm:table-cell">
                                {{ p.mail }}
                            </td>
                            <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500 hidden md:table-cell">
                                {{ p.campus ? p.campus.nom : '-' }}
                            </td>

                            <td class="px-4 py-4 whitespace-nowrap text-center">
                                {% if p.actif %}
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                    Oui
                                </span>
                                {% else %}
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                    Non
                                </span>
                                {% endif %}
                            </td>

                            <td class="px-4 py-4 whitespace-nowrap text-sm font-medium space-x-3">
                                <a href="{{ path('admin_user_edit', {id: p.id}) }}"
                                   class="text-yellow-600 hover:text-yellow-900 hover:underline">
                                    Modifier
                                </a>

                                <form method="post" action="{{ path('admin_user_toggle', {id: p.id}) }}" class="inline-block">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle_actif_' ~ p.id) }}">
                                    <button type="submit"
                                            class="text-blue-600 hover:text-blue-900 hover:underline bg-transparent border-none cursor-pointer">
                                        {{ p.actif ? 'Rendre inactif' : 'Rendre actif' }}
                                    </button>
                                </form>

                                <form method="post" action="{{ path('admin_user_delete', {id: p.id}) }}"
                                      class="inline-block"
                                      onsubmit="return confirm('Supprimer cet utilisateur ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_user_' ~ p.id) }}">
                                    <button type="submit"
                                            class="text-red-600 hover:text-red-900 hover:underline bg-transparent border-none cursor-pointer">
                                        Supprimer
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="px-6 py-10 text-center text-gray-500 italic">
                                Aucun utilisateur trouvé pour ces critères.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-6">
            {{ knp_pagination_render(participants) }}
        </div>

    </div>
{% endblock %}
