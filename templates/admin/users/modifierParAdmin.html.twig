{% extends 'base.html.twig' %}

{% block title %}Modifier utilisateur{% endblock %}

{% block body %}
    <div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
        {{ form_start(form) }}
            {# --- FORMULAIRE --- #}
            <div class="max-w-3xl mx-auto">
                <h1 class="text-3xl font-extrabold text-gray-900 mb-10 text-center md:text-left">
                    Modifier l’utilisateur
                </h1>

                <div class="bg-white shadow-xl rounded-2xl overflow-hidden border border-slate-200 p-8 space-y-8">

                    {# Section Infos Générales #}
                    <div>
                        <h2 class="text-lg font-bold text-indigo-600 uppercase mb-4 border-b border-indigo-100 pb-2">
                            Informations personnelles
                        </h2>

                        <div class="space-y-5">
                            {{ form_row(form.pseudo) }}

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                {{ form_row(form.prenom) }}
                                {{ form_row(form.nom) }}
                            </div>

                            {{ form_row(form.telephone) }}
                            {{ form_row(form.mail) }}
                        </div>
                    </div>

                    {# Section Statut / Droits (admin) #}
                    <div>
                        <h2 class="text-lg font-bold text-gray-800 uppercase mb-4">
                            Statut & droits
                        </h2>

                        <div class="space-y-3">
                            <div class="flex items-center gap-2 text-sm font-bold text-gray-700">
                                {{ form_widget(form.administrateur) }}
                                {{ form_label(form.administrateur) }}
                            </div>
                        </div>
                    </div>

                    {# Section Campus #}
                    <div>
                        <h2 class="text-lg font-bold text-indigo-600 uppercase mb-4 border-b border-indigo-100 pb-2">
                            Rattachement
                        </h2>
                        {{ form_row(form.campus) }}
                    </div>
                </div>

                {# Bouton Enregistrer #}
                <div class="mt-10 flex justify-center gap-4">
                    <a href="{{ path('admin_users') }}"
                       class="px-12 py-3 border border-slate-300 font-bold rounded-xl shadow-lg hover:bg-slate-50 transition-all">
                        Annuler
                    </a>

                    <button type="submit"
                            class="px-12 py-3 bg-indigo-600 text-white font-bold rounded-xl shadow-lg hover:bg-indigo-700 transition-all">
                        Enregistrer
                    </button>
                </div>
            </div>
        {{ form_end(form) }}
        </div>
{% endblock %}
