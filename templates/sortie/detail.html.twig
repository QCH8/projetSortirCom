{% extends 'base.html.twig' %}

{% block title %}Détail de la sortie - {{ sortie.nom }}{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
        <div class="flex flex-col md:flex-row justify-between items-center mb-8">
            <h1 class="text-3xl font-extrabold text-gray-900 mb-4 md:mb-0">{{ sortie.nom }}</h1>
            <a href="{{ path('app_accueil') }}" class="text-blue-600 hover:text-blue-800 font-medium hover:underline flex items-center">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                Retour à la liste
            </a>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            {# Informations générales #}
            <div class="bg-white shadow overflow-hidden sm:rounded-lg border border-gray-200">
                <div class="px-4 py-5 sm:px-6 bg-gray-50 border-b border-gray-200">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">Informations générales</h3>
                </div>
                <div class="px-4 py-5 sm:p-6 space-y-4">
                    <div class="grid grid-cols-3 gap-4"><div class="text-sm font-medium text-gray-500">Date et heure</div><div class="col-span-2 text-sm text-gray-900 font-semibold">{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</div></div>
                    <div class="grid grid-cols-3 gap-4"><div class="text-sm font-medium text-gray-500">Date limite</div><div class="col-span-2 text-sm text-gray-900">{{ sortie.dateLimiteInscription|date('d/m/Y') }}</div></div>
                    <div class="grid grid-cols-3 gap-4"><div class="text-sm font-medium text-gray-500">Places</div><div class="col-span-2 text-sm text-gray-900">{{ sortie.inscrits|length }} / {{ sortie.nbInscriptionsMax }}</div></div>
                    <div class="grid grid-cols-3 gap-4"><div class="text-sm font-medium text-gray-500">État</div><div class="col-span-2"><span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">{{ sortie.etat.libelle }}</span></div></div>
                    <div class="border-t pt-4">
                        <div class="text-sm font-medium text-gray-500 mb-2">Description</div>
                        <div class="text-sm text-gray-700 bg-gray-50 p-3 rounded-md">{{ sortie.infosSortie|default('Aucune description.')|nl2br }}</div>
                    </div>
                </div>
            </div>

            <div class="space-y-8">
                {# Localisation #}
                <div class="bg-white shadow sm:rounded-lg border border-gray-200 p-6 space-y-4">
                    <h3 class="text-lg font-medium text-gray-900 border-b pb-2">Localisation</h3>
                    <div class="flex justify-between text-sm"><span class="text-gray-500">Campus</span><span class="font-bold">{{ sortie.campus.nom }}</span></div>
                    <div class="flex justify-between text-sm"><span class="text-gray-500">Lieu</span><span>{{ sortie.lieu.nom }}</span></div>
                    <div class="flex justify-between text-sm"><span class="text-gray-500">Ville</span><span>{{ sortie.lieu.ville.codePostal }} {{ sortie.lieu.ville.nom }}</span></div>
                </div>

                {# Actions #}
                <div class="bg-white shadow sm:rounded-lg border border-gray-200 p-6 flex flex-wrap justify-center gap-4">
                    {% if app.user == sortie.organisateur and sortie.etat.libelle == 'En création' %}
                        <a href="{{ path('app_sortie_modifier', {'id': sortie.id}) }}" class="px-4 py-2 border border-yellow-500 text-yellow-600 rounded-md hover:bg-yellow-50">Modifier</a>
                        <form method="post" action="{{ path('participation_publication', {'id': sortie.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('publier' ~ sortie.id) }}">
                            <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700">Publier</button>
                        </form>
                    {% endif %}

                    {% if app.user != sortie.organisateur and not (app.user in sortie.inscrits) and sortie.etat.libelle == "Ouverte" and sortie.dateLimiteInscription > date() and sortie.inscrits|length < sortie.nbInscriptionsMax %}
                        <form method="post" action="{{ path('participation_inscription', {'id': sortie.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('inscrire' ~ sortie.id) }}">
                            <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 font-bold">S'inscrire</button>
                        </form>
                    {% endif %}

                    {% if app.user != sortie.organisateur and app.user in sortie.inscrits and sortie.dateHeureDebut > date() %}
                        <form method="post" action="{{ path('participation_desinscription', {'id': sortie.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('desister' ~ sortie.id) }}">
                            <button type="submit" class="px-6 py-2 border border-red-500 text-red-600 rounded-md hover:bg-red-50" onclick="return confirm('Se désister ?');">Se désister</button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Liste des participants #}
        <div class="mt-10">
            <h2 class="text-xl font-bold text-gray-800 mb-4 pb-2 border-b-2 border-blue-500 inline-block">Participants inscrits</h2>
            <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 rounded-lg">
                <table class="min-w-full divide-y divide-gray-300">
                    <thead class="bg-gray-50"><tr><th class="py-3 px-6 text-left text-sm font-semibold">Pseudo</th><th class="py-3 px-3 text-left text-sm font-semibold">Nom complet</th></tr></thead>
                    <tbody class="bg-white divide-y">
                    {% for participant in sortie.inscrits %}
                        <tr><td class="py-4 px-6 text-sm text-blue-600"><a href="{{ path('app_member_show', {'pseudo': participant.pseudo}) }}">{{ participant.pseudo }}</a></td><td class="py-4 px-3 text-sm text-gray-500">{{ participant.prenom }} {{ participant.nom|upper }}</td></tr>
                    {% else %}
                        <tr><td colspan="2" class="py-8 text-center text-sm text-gray-500 italic">Aucun inscrit.</td></tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
