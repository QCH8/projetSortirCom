{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Accueil{% endblock %}

{% block body %}
    <div class="container mt-4">
        {# --- En-tête : Info utilisateur et date --- #}
        <div class="row">
            <div class="col-12 text-end">
                <p>Date du jour : {{ "now"|date("d/m/Y") }}</p>
                <p>Participant : <strong>{{ app.user.pseudo }}</strong></p>
            </div>
        </div>

        <h2 class="mb-4">Filtrer les sorties</h2>

        {# --- Section Formulaire de Recherche --- #}
        <div class="card bg-light mb-4 shadow-sm">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-5">
                        {# Champ Campus #}
                        {{ form_row(form.campus) }}
                        {# Champ Recherche par nom #}
                        {{ form_row(form.nom) }}

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.dateDebut) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.dateFin) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        {# Checkboxes des filtres logiques #}
                        <div class="mt-4">
                            <div class="form-check">
                                {{ form_widget(form.isOrganisateur) }} {{ form_label(form.isOrganisateur) }}
                            </div>
                            <div class="form-check">
                                {{ form_widget(form.isInscrit) }} {{ form_label(form.isInscrit) }}
                            </div>
                            <div class="form-check">
                                {{ form_widget(form.isNotInscrit) }} {{ form_label(form.isNotInscrit) }}
                            </div>
                            <div class="form-check">
                                {{ form_widget(form.isTerminee) }} {{ form_label(form.isTerminee) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 d-flex align-items-center justify-content-center">
                        {# Bouton de soumission #}
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-lg btn-primary w-100'}}) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

        {# --- Tableau des Sorties --- #}
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle shadow-sm">
                <thead class="table-dark">
                <tr>
                    <th>Nom de la sortie</th>
                    <th>Date de la sortie</th>
                    <th>Clôture</th>
                    <th>Inscrits/Places</th>
                    <th>État</th>
                    <th>Inscrit</th>
                    <th>Organisateur</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for sortie in sorties %}
                    <tr>
                        <td><strong>{{ sortie.nom }}</strong></td>

                        {# Formatage des dates #}
                        <td>{{ sortie.dateHeureDebut|date('d/m/Y H:i') }}</td>
                        <td>{{ sortie.dateLimiteInscription|date('d/m/Y') }}</td>

                        {# Places #}
                        <td>
                            {{ sortie.inscrits|length }} / {{ sortie.nbInscriptionsMax }}
                        </td>

                        {# État #}
                        <td>
                            {% if sortie.isHistorisee() %}
                                <span class="badge bg-secondary">Historisée</span>
                            {% else %}
                                <span class="badge bg-secondary">{{ sortie.etat.libelle }}</span>
                            {% endif %}
                        </td>

                        {# Indicateur d'inscription #}
                        <td class="text-center">
                            {% if app.user in sortie.inscrits %}
                                <span class="badge bg-success">Inscrit</span>
                            {% endif %}
                        </td>

                        {# Organisateur #}
                        <td>
                            <a href="{{ path('app_member_show', {'pseudo': sortie.organisateur.pseudo}) }}" class="text-decoration-none fw-bold">{{ sortie.organisateur.pseudo }}</a>
                        </td>

                        {# Actions #}
                        <td>

                            {% if not sortie.isHistorisee() %}
                                {# ✅ LIEN ACTIVÉ vers la page de détail (Étape 5) #}
                                <a href="{{ path('app_sortie_detail', {'id': sortie.id}) }}" class="btn btn-sm btn-info text-white">Afficher</a>

                                {# Si l'utilisateur est l'organisateur, il peut modifier #}
                                {% if app.user == sortie.organisateur %}
                                    <a href="#" class="btn btn-sm btn-warning">Modifier</a>
                                {% endif %}
                                {# ORGANISATEUR : Annuler - si Sortie ouverte et pas commencée #}
                                {% if app.user == sortie.organisateur
                                    and sortie.getEtat().getLibelle() == "Ouverte"
                                    and sortie.dateHeureDebut > date('now', 'Europe/Paris')
                                %}
                                    {# <a href="{{ path('participation_annulation', { 'id': sortie.id }) }}">Annuler</a>  #}
                                    <form method="post" action="{{ path('participation_annulation', {'id': sortie.id}) }}" style="display: inline">
                                        <input type="hidden" name="token" value="{{ csrf_token('annuler' ~ sortie.id) }}">
                                        <button type="submit" class="px-3 py-1 rounded border cursor-pointer" onclick="return confirm('Confirmer l\'annulation de cette sortie ?');">
                                            Annuler
                                        </button>

                                    </form>
                                {% endif %}

                            {# INSCRIT : Se désister - si Sortie pas commencée #}
                                {% if app.user != sortie.organisateur
                                    and app.user in sortie.inscrits
                                    and sortie.dateHeureDebut > date('now', 'Europe/Paris')
                                %}
                                    {# <a href="{{ path('participation_desinscription', { 'id': sortie.id }) }}">Se désister</a> #}
                                    <form method="post" action="{{ path('participation_desinscription', {'id': sortie.id}) }}" style="display:inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('desister' ~ sortie.id) }}">
                                        <button type="submit" class="px-3 py-1 rounded border cursor-pointer" onclick="return confirm('Confirmer votre désinscription ?');">
                                            Se désister
                                        </button>
                                    </form>
                                {% endif %}

                            {# NON INSCRIT : S'inscrire - si Sortie pas commencée et a de la place + est ouverte #}
                                {% if app.user != sortie.organisateur
                                    and not (app.user in sortie.inscrits)
                                    and sortie.getEtat().getLibelle() == "Ouverte"
                                    and sortie.dateLimiteInscription > date('now', 'Europe/Paris')
                                    and sortie.inscrits|length < sortie.nbInscriptionsMax
                                %}
                                    {# <a href="{{ path('participation_inscription', { 'id': sortie.id }) }}">S'inscrire</a> #}
                                    <form method="post" action="{{ path('participation_inscription', {'id': sortie.id}) }}" style="display:inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('inscrire' ~ sortie.id) }}">
                                        <button type="submit" class="px-3 py-1 rounded border cursor-pointer">
                                            S'inscrire
                                        </button>
                                    </form>
                                {% endif %}

                            {% else %}
                                {# Optionnel : Tu peux afficher un petit message ou laisser la case vide #}
                                <span class="text-muted italic">Aucune action possible</span>
                            {% endif %}

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center py-4">Aucune sortie trouvée pour ces critères.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {# --- Bouton Créer une sortie (Actif) --- #}
        <div class="mt-3 mb-5">
            <a href="{{ path('app_sortie_creer') }}" class="btn btn-primary btn-lg">Créer une sortie</a>
        </div>
    </div>
{% endblock %}
