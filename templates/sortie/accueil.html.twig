{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Accueil{% endblock %}

{% block body %}
    {# Conteneur principal responsive #}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

        {# --- En-tête : Info utilisateur et date --- #}
        <div class="flex flex-col md:flex-row justify-end items-center mb-6 text-sm text-gray-600 space-y-2 md:space-y-0 md:space-x-4">
            <div>
                <span class="font-semibold">Date du jour :</span> {{ "now"|date("d/m/Y") }}
            </div>
            <div>
                <span class="font-semibold">Participant :</span> {{ app.user.pseudo }}
            </div>
        </div>

        <h2 class="text-2xl font-bold text-gray-800 mb-6">Filtrer les sorties</h2>

        {# --- Section Formulaire de Recherche --- #}
        <div class="bg-gray-50 shadow-md rounded-lg p-6 mb-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">

                {# COLONNE 1 : Champs Texte (Campus + Nom) #}
                <div class="lg:col-span-5 space-y-4">
                    <div class="block">
                        {{ form_label(form.campus, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.campus, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                    </div>
                    <div class="block">
                        {{ form_label(form.nom, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            {{ form_label(form.dateDebut, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.dateDebut, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                        </div>
                        <div>
                            {{ form_label(form.dateFin, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.dateFin, {'attr': {'class': 'w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                        </div>
                    </div>
                </div>

                {# COLONNE 2 : Checkboxes #}
                <div class="lg:col-span-4 flex flex-col justify-center space-y-3 pl-0 lg:pl-8">
                    <div class="flex items-center">
                        {{ form_widget(form.isOrganisateur, {'attr': {'class': 'h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500'}}) }}
                        {{ form_label(form.isOrganisateur, null, {'label_attr': {'class': 'ml-2 block text-sm text-gray-900'}}) }}
                    </div>
                    <div class="flex items-center">
                        {{ form_widget(form.isInscrit, {'attr': {'class': 'h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500'}}) }}
                        {{ form_label(form.isInscrit, null, {'label_attr': {'class': 'ml-2 block text-sm text-gray-900'}}) }}
                    </div>
                    <div class="flex items-center">
                        {{ form_widget(form.isNotInscrit, {'attr': {'class': 'h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500'}}) }}
                        {{ form_label(form.isNotInscrit, null, {'label_attr': {'class': 'ml-2 block text-sm text-gray-900'}}) }}
                    </div>
                    <div class="flex items-center">
                        {{ form_widget(form.isTerminee, {'attr': {'class': 'h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500'}}) }}
                        {{ form_label(form.isTerminee, null, {'label_attr': {'class': 'ml-2 block text-sm text-gray-900'}}) }}
                    </div>
                </div>

                {# COLONNE 3 : Bouton Submit #}
                <div class="lg:col-span-3 flex items-center justify-center lg:justify-end">
                    {{ form_widget(form.submit, {'attr': {'class': 'w-full lg:w-auto px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg shadow transition duration-150'}}) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>

        {# --- Tableau des Sorties --- #}
        <div class="bg-white shadow-md rounded-lg overflow-hidden border border-gray-200">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-800 text-white">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Nom de la sortie</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Date</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider hidden sm:table-cell">Clôture</th>
                        <th class="px-4 py-3 text-center text-xs font-medium uppercase tracking-wider">Inscrits/Places</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">État</th>
                        <th class="px-4 py-3 text-center text-xs font-medium uppercase tracking-wider">Inscrit</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider hidden md:table-cell">Organisateur</th>
                        <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider">Actions</th>
                    </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                    {% for sortie in sorties %}
                        <tr class="hover:bg-gray-50 transition-colors duration-150">
                            <td class="px-4 py-4 whitespace-nowrap text-sm font-bold text-gray-900">
                                {{ sortie.nom }}
                            </td>

                            <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ sortie.dateHeureDebut|date('d/m/Y H:i') }}
                            </td>
                            <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500 hidden sm:table-cell">
                                {{ sortie.dateLimiteInscription|date('d/m/Y') }}
                            </td>

                            <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                                {{ sortie.inscrits|length }} / {{ sortie.nbInscriptionsMax }}
                            </td>

                            <td class="px-4 py-4 whitespace-nowrap">
                                {% if sortie.isHistorisee() %}
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                                        Historisée
                                    </span>
                                {% else %}
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                                        {{ sortie.etat.libelle }}
                                    </span>
                                {% endif %}
                            </td>

                            <td class="px-4 py-4 whitespace-nowrap text-center">
                                {% if app.user in sortie.inscrits %}
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                        Inscrit
                                    </span>
                                {% endif %}
                            </td>

                            <td class="px-4 py-4 whitespace-nowrap text-sm hidden md:table-cell">
                                <a href="{{ path('app_member_show', {'pseudo': sortie.organisateur.pseudo}) }}" class="text-indigo-600 hover:text-indigo-900 font-medium hover:underline">
                                    {{ sortie.organisateur.pseudo }}
                                </a>
                            </td>

                            {# Actions #}
                            <td class="px-4 py-4 whitespace-nowrap text-sm font-medium space-x-2">

                                {% if not sortie.isHistorisee() %}
                                    <a href="{{ path('app_sortie_detail', {'id': sortie.id}) }}" class="text-blue-600 hover:text-blue-900 hover:underline">
                                        Afficher
                                    </a>

                                    {% if app.user == sortie.organisateur %}
                                        <a href="{{ path('app_sortie_modifier', {'id': sortie.id}) }}" class="text-yellow-600 hover:text-yellow-900 hover:underline">Modifier</a>
                                    {% endif %}

                                    {% if app.user == sortie.organisateur
                                        and sortie.getEtat().getLibelle() == "Ouverte"
                                        and sortie.dateHeureDebut > date()
                                    %}
                                        {# Ouverture de modal #}
                                        <button type="button"
                                            class="text-red-600 hover:text-red-900 hover:underline bg-transparent border-none cursor-pointer"
                                            data-modal-open="annulation-{{ sortie.id }}">
                                            Annuler
                                        </button>

                                        {# Modal cachée par défaut #}
                                        <div id="annulation-{{ sortie.id }}"
                                        class="fixed inset-0 z-50 hidden items-center justify-center"
                                        aria-hidden="true">
                                            {# Overlay #}
                                            <div class="absolute inset-0 bg-black/50" data-modal-close></div>
                                            {# Contenu #}
                                            <div class="relative w-full max-w-lg mx-4 rounded-xl bg-white shadow-lg">
                                                <div class="p-4 border-b">
                                                    <h3 class="text-lg font-semibold">Justifier l’annulation</h3>
                                                    <p class="text-sm text-gray-600 mt-1">
                                                        Merci d’indiquer la raison (elle sera visible aux participants).
                                                    </p>
                                                </div>

                                                <form method="post"
                                                      action="{{ path('participation_annulation', {'id': sortie.id}) }}"
                                                      class="p-4 space-y-4">
                                                    <label for="messageAnnulation-{{ sortie.id }}" class="block text-sm font-medium text-gray-700">Motifs d'annulation</label>
                                                    <textarea id="messageAnnulation-{{ sortie.id }}"
                                                              name="messageAnnulation"
                                                              rows="5"
                                                              maxlength="255"
                                                              required
                                                              class="w-full rounded-lg border border-gray-300 p-2 focus:outline-none focus:ring focus:ring-red-200"
                                                              placeholder="Ex : météo défavorable, imprévu, problème de logistique..."></textarea>

                                                    <input type="hidden" name="_token" value="{{ csrf_token('annuler' ~ sortie.id) }}">

                                                    <div class="flex justify-end gap-2 pt-2">
                                                        <button type="button"
                                                                class="px-4 py-2 rounded-lg border border-gray-300 hover:bg-gray-50"
                                                                data-modal-close>
                                                            Retour
                                                        </button>

                                                        <button type="submit"
                                                                class="px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700">
                                                            Confirmer
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                        {# <form method="post" action="{{ path('participation_annulation', {'id': sortie.id}) }}" class="inline-block">
                                            <input type="hidden" name="_token" value="{{ csrf_token('annuler' ~ sortie.id) }}">
                                            <button type="submit" class="text-red-600 hover:text-red-900 hover:underline bg-transparent border-none cursor-pointer">
                                                Annuler
                                            </button>
                                        </form> #}
                                    {% endif %}

                                    {% if app.user != sortie.organisateur
                                        and app.user in sortie.inscrits
                                        and sortie.dateHeureDebut > date()
                                    %}
                                        <form method="post" action="{{ path('participation_desinscription', {'id': sortie.id}) }}" class="inline-block">
                                            <input type="hidden" name="_token" value="{{ csrf_token('desister' ~ sortie.id) }}">
                                            <button type="submit" class="text-red-600 hover:text-red-900 hover:underline bg-transparent border-none cursor-pointer" onclick="return confirm('Confirmer votre désinscription ?');">
                                                Se désister
                                            </button>
                                        </form>
                                    {% endif %}

                                    {% if app.user != sortie.organisateur
                                        and not (app.user in sortie.inscrits)
                                        and sortie.getEtat().getLibelle() == "Ouverte"
                                        and sortie.dateLimiteInscription > date()
                                        and sortie.inscrits|length < sortie.nbInscriptionsMax
                                    %}
                                        <form method="post" action="{{ path('participation_inscription', {'id': sortie.id}) }}" class="inline-block">
                                            <input type="hidden" name="_token" value="{{ csrf_token('inscrire' ~ sortie.id) }}">
                                            <button type="submit" class="text-green-600 hover:text-green-900 hover:underline bg-transparent border-none cursor-pointer">
                                                S'inscrire
                                            </button>
                                        </form>
                                    {% endif %}

                                {% else %}
                                    <span class="text-gray-400 italic">Aucune action</span>
                                {% endif %}

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="px-6 py-10 text-center text-gray-500 italic">
                                Aucune sortie trouvée pour ces critères.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-8">
            <a href="{{ path('app_sortie_creer') }}" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Créer une sortie
            </a>
        </div>
    </div>

    <script>
        function openModal(modal) {
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            modal.setAttribute('aria-hidden', 'false');

            const textarea = modal.querySelector('textarea');
            if (textarea) textarea.focus();

            document.body.classList.add('overflow-hidden'); // empeche scroll en background
        }

        function closeModal(modal) {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            modal.setAttribute('aria-hidden', 'true');

            document.body.classList.remove('overflow-hidden');
        }

        document.addEventListener('click', (e) => {
            const openBtn = e.target.closest('[data-modal-open]');
            if (openBtn) {
                const id = openBtn.getAttribute('data-modal-open');
                const modal = document.getElementById(id);
                if (modal) openModal(modal);
                return;
            }

            // fermeture modal si click sur overlay ou élément marqué data-modal-close
            const closeEl = e.target.closest('[data-modal-close]');
            if (closeEl) {
                const modal = closeEl.closest('.fixed.inset-0.z-50');
                if (modal) closeModal(modal);
            }
        });

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                document.querySelectorAll('.fixed.inset-0.z-50:not(.hidden)').forEach(closeModal);
            }
        });
    </script>
{% endblock %}
