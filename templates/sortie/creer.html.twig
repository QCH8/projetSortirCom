{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Créer une sortie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Créer une sortie</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                {{ form_start(form) }}

                {# --- Partie Informations --- #}
                <div class="card p-4 mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.nom) }}
                            {{ form_row(form.dateHeureDebut) }}
                            {{ form_row(form.dateLimiteInscription) }}
                            {{ form_row(form.nbInscriptionsMax) }}
                            {{ form_row(form.duree) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.infosSortie, {'attr': {'rows': 5}}) }}

                            <h5 class="mt-3">Lieu et Ville</h5>
                            {# Le champ Ville n'est pas lié à la sortie, mais aide à choisir #}
                            {{ form_row(form.ville) }}

                            {# Le champ Lieu est le vrai champ important #}
                            {{ form_row(form.lieu) }}

                            {# Petit bouton "fake" pour simuler l'ajout de lieu (sera codé plus tard) #}
                            <div class="text-end">
                                <a href="#" class="btn btn-sm btn-outline-secondary rounded-circle" title="Ajouter un lieu">+</a>
                            </div>
                        </div>
                    </div>
                </div>

                {# --- Les 3 Boutons --- #}
                <div class="d-flex justify-content-between">
                    {# Bouton 1 : Enregistrer (En création) #}
                    <button type="submit" name="enregistrer" class="btn btn-success">
                        Enregistrer
                    </button>

                    {# Bouton 2 : Publier (Ouverte) #}
                    <button type="submit" name="publier" class="btn btn-primary">
                        Publier
                    </button>

                    {# Bouton 3 : Retour (Annuler) #}
                    <a href="{{ path('sortie_liste') }}" class="btn btn-secondary">
                        Retour à la liste
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
