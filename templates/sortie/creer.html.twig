{% extends 'base.html.twig' %}

{% block title %}Créer une sortie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Créer une sortie</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                {{ form_start(form) }}

                <div class="card p-4 mb-4 shadow-sm">
                    <div class="row">
                        {# Colonne Gauche #}
                        <div class="col-md-6">
                            {{ form_row(form.nom) }}
                            {{ form_row(form.dateHeureDebut) }}
                            {{ form_row(form.dateLimiteInscription) }}
                            {{ form_row(form.nbInscriptionsMax) }}
                            {{ form_row(form.duree) }}
                        </div>

                        {# Colonne Droite #}
                        <div class="col-md-6">
                            {{ form_row(form.infosSortie, {'attr': {'rows': 5}}) }}

                            <h5 class="mt-3 text-secondary">Localisation</h5>
                            {{ form_row(form.campus, {'label': 'Campus (fixé)', 'attr': {'disabled': 'disabled'}}) }}
                            {{ form_row(form.ville) }}
                            {{ form_row(form.lieu) }}

                            <div class="text-end">
                                <small class="text-muted">Un lieu manque ? <a href="#">Ajouter un lieu</a></small>
                            </div>
                        </div>
                    </div>
                </div>

                {# --- LES BOUTONS D'ACTION --- #}
                <div class="d-flex justify-content-center gap-3 mb-5">
                    {# Bouton ENREGISTRER (name="enregistrer") #}
                    <button type="submit" name="enregistrer" class="btn btn-outline-success btn-lg">
                        Enregistrer
                    </button>

                    {# Bouton PUBLIER (name="publier") - C'est lui que le contrôleur écoute #}
                    <button type="submit" name="publier" class="btn btn-primary btn-lg">
                        Publier la sortie
                    </button>

                    {# Bouton ANNULER #}
                    <a href="{{ path('app_accueil') }}" class="btn btn-secondary btn-lg">
                        Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
